<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="100.0" prefWidth="650.0"  xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.dev.jbooklib.controller.LoginController">
    <children>
        <Label fx:id="lblStatus" alignment="CENTER" contentDisplay="CENTER" text="Статус" textAlignment="CENTER">
            <font>
                <Font name="Calibri Bold" size="24.0"/>
            </font>
        </Label>
        <ButtonBar buttonMinWidth="100.0" prefHeight="40.0" prefWidth="200.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <buttons>
                <JFXButton onAction="#handleOK" text="OK"/>
                <JFXButton onAction="#handleCancel" layoutX="515.0" layoutY="10.0" text="Отмена"/>
            </buttons>
        </ButtonBar>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</VBox>
